{
    "eslint.enable": true,
    "eslint.format.enable": false,
    "editor.tabSize": 4,
    "[javascript]": {    
        "editor.tabSize": 2,
    },
    "[typescript]": {    
        "editor.tabSize": 2,
    },
    "[javascriptreact]": {    
        "editor.tabSize": 2,
    },
    "[typescriptreact]": {    
        "editor.tabSize": 2,
    },
    "[json]": {    
        "editor.tabSize": 2,
    },
    "[css]": {    
        "editor.tabSize": 2,
    },
    "[scss]": {    
        "editor.tabSize": 2,
    },
    "files.encoding": "utf8",
    "files.eol": "\n",
    "javascript.suggest.autoImports": false,
    "typescript.suggest.autoImports": false,
    "typescript.updateImportsOnFileMove.enabled": "never",
    "javascript.updateImportsOnFileMove.enabled": "never",
}